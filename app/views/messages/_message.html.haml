.messages__message{"data-id" => "#{message.id}","data-user_id" => "#{message.user.id}"}
  .messages__upper-info
    %p.messages__upper-info__user-name
      = message.user.name
    %p.messages__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__lower-info__text
  - if message.content.present?
    %p.lower-message__content
      = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?