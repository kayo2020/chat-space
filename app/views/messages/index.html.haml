.flash-box
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name aaa
        %ul.side-header__box__menu
          %li.side-header__box__menu__edit-user
            %i.fa.fa-edit
          %li.side-header__box__menu__new-group
            %i.fa.fa-cog
    
    .groups
      .group
        %p.group__group-name test
        %p.group__latest-message r
        
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group test
        %ul.main-header__left-box__member 
          Member: 
          %li.main-header__left-box__member__list test


      .main-header__edit-btn
        = link_to 'Edit', '#'
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker test
          %p.message__upper-info__date 2019/10/25
        %p.message__text test

    .form
      .input-box
        %input.input-box__text{placeholder:'type a message'}
        %label.input-box__image
          %i.fa.fa-image
          %input.input-box__image__file
      %input.submit-btn{value:'Send'}

      

    
  

    
            



      

   
    
