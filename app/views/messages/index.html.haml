.flash-box
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name aaa
        
        %ul.side-header__box__menu
          %li.side-header__box__menu__edit-user
            %i.fa.fa-edit
          %li.side-header__box__menu__new-group
            %i.fa.fa-cog
    .groups
      .group
        %p.group__group-name test
        %p.group__latest-message r
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group test
        %ul.main-header__left-box__member 
          Member: 
          %li.main-header__left-box__member__list test
      .main-header__edit-btn
        = link_to 'Edit', '#'
    .messages
      = render @messages
      .message
        .message__upper-info
          %p.message__upper-info__talker test
          %p.message__upper-info__date 2019/10/25
        %p.message__text test
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .input-box
         = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'